extends base.pug

block scripts 
    script(src="static/index.js")

block style 
    style 
        include ../static/style.css
        include ../static/contact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact",method="post" class="myForm")
            input(type="text" name="name" class="MyInput" placeholder="Enter your name")
            input(type="tel" name="phone" class="MyInput" placeholder="Enter your PhoneNumber")
            input(type="email" name="email" class="MyInput" placeholder="Enter your Email")
            input(type="text" name="address" class="MyInput" placeholder="Enter your address")
            input(type="text" name="more" class="MyInput" placeholder="Enter your concern")
            button(class="btn")
                | Submit